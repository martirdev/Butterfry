{
  "name": "@butterfry/server",
  "scripts": {
    "typegen": "rollup --config typegen/rollup.config.js",
    "typegen:watch": "nodemon --quiet --watch src --ext ts --exec 'bun run typegen'",
    "dev": "concurrently --names 'types,app' 'bun run typegen:watch' 'bun run --watch src/index.ts'",
    "migrate:generate": "drizzle-kit generate",
    "migrate:push": "bun src/migrate.ts",
    "migrate": "bun run migrate:generate && bun run migrate:push"
  },
  "dependencies": {
    "@effect/platform": "^0.59.2",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "arctic": "^1.9.2",
    "drizzle-orm": "^0.32.0",
    "effect": "^3.5.6",
    "globals": "^15.8.0",
    "hono": "^4.5.3",
    "lodash": "^4.17.21",
    "lucia": "^3.2.0",
    "pg": "^8.12.0",
    "url": "^0.11.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/pg": "^8.11.6",
    "eslint": "^9.8.0",
    "typescript-eslint": "^7.17.0",
    "@types/bun": "latest",
    "@types/lodash": "^4.17.7",
    "concurrently": "^9.0.1",
    "drizzle-kit": "^0.23.0",
    "rollup": "^4.22.2",
    "rollup-plugin-dts": "^6.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "module": "index.ts",
  "type": "module"
}
